    <script>
        // Initialize map
        document.addEventListener("DOMContentLoaded", function () {
          var map = L.map("centres-map", {
            zoomControl: true,
            scrollWheelZoom: true,
            zIndex: 1,
          }).setView([30.0444, 31.2357], 10); // Cairo coordinates

          L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution:
              '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
            zIndex: 1,
          }).addTo(map);

          // Add markers for each centre (simplified coordinates)
          var centres = [
            { name: "Maadi Learning Centre", lat: 29.962, lng: 31.259 },
            { name: "Nasr City Hub", lat: 30.0626, lng: 31.3497 },
            { name: "Heliopolis Academy", lat: 30.0887, lng: 31.3257 },
            { name: "Zamalek Study Centre", lat: 30.0621, lng: 31.2179 },
            { name: "New Cairo Education Centre", lat: 30.03, lng: 31.47 },
            { name: "Alexandria Learning Hub", lat: 31.2001, lng: 29.9187 },
          ];

          centres.forEach(function (centre) {
            L.marker([centre.lat, centre.lng]).addTo(map).bindPopup(centre.name);
          });

          // Fix z-index after map loads
          setTimeout(function () {
            document.querySelector("#centres-map").style.zIndex = "1";
            var mapContainer = document.querySelector(".leaflet-container");
            if (mapContainer) {
              mapContainer.style.zIndex = "1";
            }
          }, 100);
        });
