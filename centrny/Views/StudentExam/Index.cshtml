@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Attend Exam</title>
    <link rel="stylesheet" href="/css/Hamody.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            min-width: 100vw;
            overflow: hidden;
        }

        .exam-overlay {
            position: fixed;
            inset: 0;
            width: 100vw;
            height: 100vh;
            background: #10151f;
            z-index: 2000;
            display: flex;
            align-items: stretch;
            justify-content: stretch;
        }

        .exam-content {
            width: 100vw;
            height: 100vh;
            background: #fff;
            border-radius: 0 !important;
            padding: 0;
            position: relative;
            box-shadow: none;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .exam-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding: 2.5rem 2.5rem 0 2.5rem;
        }

        .exam-title {
            font-size: 2rem;
            font-weight: 700;
            color: #232d3b;
        }

        .exam-timer {
            font-size: 1.3rem;
            font-weight: 700;
            color: #fff;
            background: #dc3545;
            border-radius: 8px;
            padding: 8px 18px;
            letter-spacing: 1px;
        }

        #questionsContainer {
            flex: 1;
            overflow-y: auto;
            padding: 0 2.5rem 2rem 2.5rem;
        }

        .exam-question-card {
            background: #f6f8fa;
            border-radius: 10px;
            margin-bottom: 20px;
            padding: 1.1rem 1.5rem 1.3rem 1.5rem;
            border: 1px solid #e6e6e6;
        }

        .exam-question-header {
            font-weight: 600;
            color: #232d3b;
            margin-bottom: 0.7rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .exam-answer-option {
            margin-bottom: 7px;
        }

            .exam-answer-option input[type="radio"] {
                margin-right: 7px;
            }

        #examErrorMsg {
            color: #dc3545;
            font-weight: bold;
            margin: 15px 0 0 0;
            display: none;
        }

        /* Sticky submit bar at the bottom */
        .exam-submit-bar {
            position: sticky;
            bottom: 0;
            background: #fff;
            padding: 1rem 2.5rem 0.5rem 2.5rem;
            z-index: 10;
            text-align: right;
            border-top: 1px solid #eee;
        }

        .exam-submit-btn {
            padding: 0.7rem 2.5rem;
            border-radius: 8px;
            background: #007bff;
            border: none;
            color: #fff;
            font-size: 1.15rem;
            font-weight: 600;
            cursor: pointer;
            transition: background .2s;
        }

            .exam-submit-btn:disabled {
                opacity: .7;
                cursor: not-allowed;
            }

       @@media (max-width: 700px) {
            .exam-header, #questionsContainer, .exam-submit-bar

        {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="exam-overlay">
        <div class="exam-content">
            <div class="exam-header">
                <div class="exam-title" id="examTitle">Loading Exam...</div>
                <div class="exam-timer" id="examTimer">00:00</div>
            </div>
            <form id="examForm" autocomplete="off" style="flex:1;display:flex;flex-direction:column;">
                <div id="questionsContainer"></div>
                <div id="examErrorMsg"></div>
                <div class="exam-submit-bar">
                    <button type="submit" class="exam-submit-btn" id="submitExamBtn">Submit Exam</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/StudentExam.js"></script>
</body>
</html>