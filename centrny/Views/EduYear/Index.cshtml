@{
    ViewBag.Title = "Edu Years & Years";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Hamody.css" />

<h2>Educational Years List</h2>
<div style="margin-bottom: 22px;">
    <button id="add-eduyear-btn" class="modern-btn">Add Educational Year</button>
</div>

<!-- Modal for Add/Edit EduYear -->
<div id="addEduYearModal" class="modal-overlay" style="display:none;">
    <div class="modal-box">
        <div class="modal-header">
            <span id="eduModalTitle" style="font-weight:600;font-size:1.15rem;">New Educational Year</span>
            <span id="closeEduModal" style="cursor:pointer;font-size:1.4rem;">&times;</span>
        </div>
        <form id="addEduYearForm">
            <input type="hidden" id="eduCode" name="eduCode" />
            <div class="form-group">
                <label for="eduName">Educational Year </label>
                <input type="text" id="eduName" name="eduName" required maxlength="100" />
            </div>
            <div class="form-group">
                <label for="isActive">Is Active?</label>
                <select id="isActive" name="isActive" required>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div id="addEduYearError" style="color:#c00; margin-bottom:10px;"></div>
            <button type="submit" class="modern-btn" style="width:100%;">Submit</button>
        </form>
    </div>
</div>

<div class="eduyear-table-container">
    <table>
        <thead>
            <tr>
              
                <th>Eductational Year</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="eduyear-body">
            <!-- JS will populate this -->
        </tbody>
    </table>
    <div id="eduyear-message" style="margin-top:20px;color:#b33c3c;font-weight:600;"></div>
</div>

<!-- YEARS SECTION -->
<h2 style="margin-top:50px;">Years for Active Edu Year</h2>
<div style="margin-bottom: 22px;">
    <button id="add-year-btn" class="modern-btn">Add Year</button>
</div>

<!-- Modal for Add/Edit Year -->
<div id="addYearModal" class="modal-overlay" style="display:none;">
    <div class="modal-box">
        <div class="modal-header">
            <span id="yearModalTitle" style="font-weight:600;font-size:1.15rem;">Add Year</span>
            <span id="closeYearModal" style="cursor:pointer;font-size:1.4rem;">&times;</span>
        </div>
        <form id="addYearForm">
            <input type="hidden" id="yearCode" name="yearCode" />
            <div class="form-group">
                <label for="yearName">Year Name</label>
                <input type="text" id="yearName" name="yearName" required maxlength="100" />
            </div>
            <div class="form-group">
                <label for="yearSort">Year Sort</label>
                <input type="number" id="yearSort" name="yearSort" required min="1" />
            </div>
            <div class="form-group">
                <label for="levelCode">Level</label>
                <select id="levelCode" name="levelCode" required>
                    <option value="">Loading...</option>
                </select>
            </div>
            <div id="addYearError" style="color:#c00; margin-bottom:10px;"></div>
            <button type="submit" class="modern-btn" style="width:100%;">Submit</button>
        </form>
    </div>
</div>

<div class="year-table-container">
    <table>
        <thead>
            <tr>
              
                <th>Year Name</th>
                <th>Year Sort</th>
                <th>Level Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="year-body">
            <!-- JS will populate this -->
        </tbody>
    </table>
    <div id="year-message" style="margin-top:20px;color:#b33c3c;font-weight:600;"></div>
</div>

@section Scripts {
    <script src="~/js/EduYear.js"></script>
}