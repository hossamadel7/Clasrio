@model IEnumerable<centrny.Models.Schedule>

@{
    ViewData["Title"] = "Schedule List";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Schedule Management
                        </h2>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Calendar")" class="btn btn-light">
                                <i class="fas fa-calendar me-1"></i> Calendar View
                            </a>
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i> Add New Schedule
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.ScheduleName)</th>
                                        <th>Day of Week</th>
                                        <th>Time</th>
                                        <th>Type</th>
                                        <th>Hall</th>
                                        <th>Teacher</th>
                                        <th>Subject</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.ScheduleName)</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                                                </span>
                                            </td>
                                            <td>
                                                @if (item.StartTime.HasValue && item.EndTime.HasValue)
                                                {
                                                    <small class="text-muted">
                                                        @item.StartTime.Value.ToString("HH:mm") - @item.EndTime.Value.ToString("HH:mm")
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @if (item.RootCodeNavigation?.IsCenter == true)
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-building me-1"></i>Center
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-user me-1"></i>Teacher
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HallCodeNavigation.HallName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TeacherCodeNavigation.TeacherName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SubjectCodeNavigation.SubjectName)
                                            </td>
                                            <td>
                                                @if (item.ScheduleAmount.HasValue)
                                                {
                                                    <span class="text-success fw-bold">
                                                        $@item.ScheduleAmount.Value.ToString("F2")
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", new { id = item.ScheduleCode })"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = item.ScheduleCode })"
                                                       class="btn btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", new { id = item.ScheduleCode })"
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-calendar-times fa-5x text-muted"></i>
                            </div>
                            <h4 class="text-muted">No Schedules Found</h4>
                            <p class="text-muted">Get started by creating your first schedule.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i> Create New Schedule
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table td {
        vertical-align: middle;
        border-color: #e9ecef;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .btn-group-sm .btn {
        padding: 0.375rem 0.5rem;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
    }
</style>