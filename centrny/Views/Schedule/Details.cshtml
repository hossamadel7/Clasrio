@model centrny.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Schedule Details
                        </h2>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.ScheduleCode" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.ScheduleCode" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="schedule-title-section text-center p-4 bg-light rounded">
                                <h1 class="display-6 text-primary mb-2">@Model.ScheduleName</h1>
                                <div class="d-flex justify-content-center gap-3 flex-wrap">
                                    <span class="badge bg-secondary fs-6 px-3 py-2">
                                        <i class="fas fa-calendar-day me-1"></i>
                                        @Model.DayOfWeek
                                    </span>
                                    @if (Model.StartTime.HasValue && Model.EndTime.HasValue)
                                    {
                                        <span class="badge bg-info fs-6 px-3 py-2">
                                            <i class="fas fa-clock me-1"></i>
                                            @Model.StartTime.Value.ToString("HH:mm") - @Model.EndTime.Value.ToString("HH:mm")
                                        </span>
                                    }
                                    @if (Model.RootCodeNavigation != null)
                                    {
                                        @if (Model.RootCodeNavigation.IsCenter)
                                        {
                                            <span class="badge bg-primary fs-6 px-3 py-2">
                                                <i class="fas fa-building me-1"></i>
                                                Center Schedule
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning fs-6 px-3 py-2">
                                                <i class="fas fa-user me-1"></i>
                                                Teacher Schedule
                                            </span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="details-section">
                                <h5 class="section-title">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                    Schedule Information
                                </h5>

                                <div class="detail-item">
                                    <dt>Schedule Code</dt>
                                    <dd class="text-muted">#@Model.ScheduleCode</dd>
                                </div>

                                <div class="detail-item">
                                    <dt>Day of Week</dt>
                                    <dd>
                                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.DayOfWeek)</span>
                                    </dd>
                                </div>

                                @if (Model.StartTime.HasValue)
                                {
                                    <div class="detail-item">
                                        <dt>Start Time</dt>
                                        <dd>@Model.StartTime.Value.ToString("hh:mm tt")</dd>
                                    </div>
                                }

                                @if (Model.EndTime.HasValue)
                                {
                                    <div class="detail-item">
                                        <dt>End Time</dt>
                                        <dd>@Model.EndTime.Value.ToString("hh:mm tt")</dd>
                                    </div>
                                }

                                @if (Model.ScheduleAmount.HasValue)
                                {
                                    <div class="detail-item">
                                        <dt>Amount</dt>
                                        <dd class="text-success fw-bold fs-5">$@Model.ScheduleAmount.Value.ToString("F2")</dd>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="details-section">
                                <h5 class="section-title">
                                    <i class="fas fa-users text-success me-2"></i>
                                    Associated Information
                                </h5>

                                @if (Model.HallCodeNavigation != null)
                                {
                                    <div class="detail-item">
                                        <dt>Hall</dt>
                                        <dd>
                                            <i class="fas fa-door-open text-muted me-1"></i>
                                            @Html.DisplayFor(model => model.HallCodeNavigation.HallName)
                                        </dd>
                                    </div>
                                }

                                @if (Model.RootCodeNavigation != null)
                                {
                                    <div class="detail-item">
                                        <dt>Root/Center</dt>
                                        <dd>
                                            <i class="fas fa-building text-muted me-1"></i>
                                            @Html.DisplayFor(model => model.RootCodeNavigation.RootName)
                                        </dd>
                                    </div>
                                }

                                @if (Model.EduYearCodeNavigation != null)
                                {
                                    <div class="detail-item">
                                        <dt>Educational Year</dt>
                                        <dd>
                                            <i class="fas fa-graduation-cap text-muted me-1"></i>
                                            @Html.DisplayFor(model => model.EduYearCodeNavigation.EduName)
                                        </dd>
                                    </div>
                                }

                                @if (Model.TeacherCodeNavigation != null)
                                {
                                    <div class="detail-item">
                                        <dt>Teacher</dt>
                                        <dd>
                                            <i class="fas fa-chalkboard-teacher text-muted me-1"></i>
                                            @Html.DisplayFor(model => model.TeacherCodeNavigation.TeacherName)
                                        </dd>
                                    </div>
                                }

                                @if (Model.SubjectCodeNavigation != null)
                                {
                                    <div class="detail-item">
                                        <dt>Subject</dt>
                                        <dd>
                                            <i class="fas fa-book text-muted me-1"></i>
                                            @Html.DisplayFor(model => model.SubjectCodeNavigation.SubjectName)
                                        </dd>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.Classes.Any() || Model.Attends.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Related Data
                                    </h6>
                                    @if (Model.Classes.Any())
                                    {
                                        <p class="mb-1">
                                            <strong>Classes:</strong> @Model.Classes.Count class(es) associated with this schedule
                                        </p>
                                    }
                                    @if (Model.Attends.Any())
                                    {
                                        <p class="mb-0">
                                            <strong>Attendance:</strong> @Model.Attends.Count attendance record(s) linked to this schedule
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <div class="d-flex gap-3 mt-4 flex-wrap">
                        <a asp-action="Edit" asp-route-id="@Model.ScheduleCode" class="btn btn-warning btn-lg px-4">
                            <i class="fas fa-edit me-2"></i>
                            Edit Schedule
                        </a>
                        <a asp-action="Calendar" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-calendar me-2"></i>
                            Back to Calendar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-list me-2"></i>
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .schedule-title-section {
        border-radius: 10px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .details-section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 10px;
        height: 100%;
    }

    .section-title {
        border-bottom: 2px solid #dee2e6;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .detail-item {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e9ecef;
    }

        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .detail-item dt {
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }

        .detail-item dd {
            margin-bottom: 0;
            color: #212529;
        }

    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .badge {
        border-radius: 8px;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>