@using Microsoft.Extensions.Localization
@using System.Globalization
@inject IStringLocalizerFactory LocalizerFactory
@{
    var Localizer = LocalizerFactory.Create("Question", System.Reflection.Assembly.GetExecutingAssembly().GetName().Name);
    ViewData["Title"] = Localizer["Title"];
    Layout = "_Layout";
    var isArabic = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar";
    var htmlLang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var htmlDir = isArabic ? "rtl" : "ltr";
}
<!DOCTYPE html>
<html lang="@htmlLang" dir="@htmlDir">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    @if (isArabic)
    {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.rtl.min.css" rel="stylesheet" />
    }
    else
    {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    }
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/Hamody.css" rel="stylesheet" />
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
            --primary-gradient-horizontal: linear-gradient(90deg, #012852 0%, #5982ff 100%);
            --primary-gradient-light: linear-gradient(135deg, #a29bfe33 0%, #6c5ce722 100%);
            --success-gradient: linear-gradient(135deg, #00b894 0%, #55efc4 100%);
            --danger-gradient: linear-gradient(135deg, #e73f3f 0%, #fd797e 100%);
            --secondary-gradient: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
            --primary-color: #6c5ce7;
            --warning-gradient: linear-gradient(135deg, #fdcb6e 0%, #f39c12 100%);
            --bg-light: #f8f9fa;
            --bg-white: #ffffff;
            --border-radius: 18px;
            --border-radius-lg: 28px;
            --shadow-lg: 0 8px 36px rgba(108, 92, 231, 0.18);
            --sidebar-width: 320px;
        }

        html[dir="rtl"] body,
        html[dir="rtl"] .container-fluid,
        html[dir="rtl"] .profile-content,
        html[dir="rtl"] #main-container,
        html[dir="rtl"] .modal-content {
            direction: rtl;
            text-align: right;
        }

        .questions-header {
            width: 100%;
            text-align: center;
            margin-bottom: 2.2rem;
            padding: 2rem 0 1.2rem 0;
            background: transparent;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-lg);
            border: 1px solid rgba(108,92,231,0.11);
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .questions-header h2 {
                font-size: 2.5rem;
                font-weight: 800;
                margin-bottom: 0.3rem;
                letter-spacing: -.01em;
                background: var(--primary-gradient-horizontal);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                color: transparent;
                display: inline-block;
                text-align: center;
            }

            .questions-header i {
                margin-right: 12px;
                color: #4f8cff;
            }

        /* Subject-Year Filter */
        .subject-year-selector {
            background: var(--bg-white);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid rgba(108,92,231,0.11);
        }

            .subject-year-selector label {
                font-weight: 600;
                color: var(--primary-color);
                margin-bottom: 0.5rem;
                display: block;
            }

        /* Main Layout */
        .main-layout {
            display: flex;
            gap: 1.5rem;
            min-height: 600px;
        }

        /* Sidebar */
        .lessons-sidebar {
            width: var(--sidebar-width);
            background: var(--bg-white);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid rgba(108,92,231,0.11);
            max-height: 80vh;
            overflow-y: auto;
        }

            .lessons-sidebar h3 {
                color: var(--primary-color);
                font-weight: 700;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

        .chapter-item {
            margin-bottom: 0.5rem;
        }

        .chapter-header {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            background: var(--primary-gradient-light);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: 600;
            color: var(--primary-color);
        }

            .chapter-header:hover {
                background: var(--primary-gradient);
                color: white;
                transform: translateX(2px);
            }

            .chapter-header i {
                margin-right: 0.5rem;
                transition: transform 0.2s ease;
            }

            .chapter-header.expanded i {
                transform: rotate(90deg);
            }

        .lessons-list {
            margin-top: 0.5rem;
            margin-left: 1rem;
            display: none;
        }

        .lesson-item {
            padding: 0.5rem 0.75rem;
            margin-bottom: 0.25rem;
            background: #f8f9fa;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .lesson-item:hover {
                background: var(--primary-gradient-light);
                transform: translateX(2px);
            }

            .lesson-item.active {
                background: var(--primary-gradient);
                color: white;
            }

        .lesson-question-count {
            background: rgba(108, 92, 231, 0.1);
            color: var(--primary-color);
            padding: 0.2rem 0.5rem;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .lesson-item.active .lesson-question-count {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            background: var(--bg-white);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid rgba(108,92,231,0.11);
        }

        .lesson-header-info {
            background: var(--primary-gradient-light);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .lesson-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Questions List */
        .questions-container {
            margin-top: 1.5rem;
        }

        .question-item {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
            border: 1px solid #e9ecef;
            transition: all 0.2s ease;
        }

            .question-item:hover {
                box-shadow: 0 4px 12px rgba(108, 92, 231, 0.15);
                transform: translateY(-1px);
            }

        .question-content {
            font-size: 1.1rem;
            line-height: 1.5;
            margin-bottom: 0.75rem;
            color: #333;
        }

        .question-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .answers-container {
            margin-top: 1rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }

        .answer-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            background: white;
            border-radius: 6px;
            border: 1px solid #e9ecef;
        }

            .answer-row.correct {
                background: #d4edda;
                border-color: #c3e6cb;
            }

        .answer-content {
            flex: 1;
        }

        .answer-status {
            font-weight: 600;
            margin-left: 1rem;
        }

            .answer-status.correct {
                color: #155724;
            }

            .answer-status.incorrect {
                color: #721c24;
            }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                color: #dee2e6;
            }

        /* Modern Buttons */
        .modern-btn {
            font-weight: 600 !important;
            padding: 0.65rem 1.3rem !important;
            border-radius: var(--border-radius) !important;
            border: none !important;
            color: #fff !important;
            box-shadow: 0 2px 8px rgba(108, 92, 231, 0.10) !important;
            font-size: 1rem !important;
            cursor: pointer !important;
            margin-right: 0.4rem !important;
            transition: transform 0.16s, box-shadow 0.16s !important;
            display: inline-flex !important;
            align-items: center !important;
            gap: 0.5em !important;
        }

            .modern-btn.primary-btn {
                background: var(--primary-gradient) !important;
            }

            .modern-btn.success-btn {
                background: var(--success-gradient) !important;
            }

            .modern-btn.danger-btn {
                background: var(--danger-gradient) !important;
            }

            .modern-btn.secondary-btn {
                background: var(--primary-gradient-light) !important;
                color: var(--primary-color) !important;
            }

            .modern-btn:hover {
                transform: scale(1.05) !important;
                box-shadow: var(--shadow-lg) !important;
            }

        .btn-table {
            padding: 0.4rem 0.8rem;
            font-size: 0.875rem;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

            .btn-table.add {
                background: var(--success-gradient);
                color: white;
            }

            .btn-table.edit {
                background: var(--primary-gradient);
                color: white;
            }

            .btn-table.delete {
                background: var(--danger-gradient);
                color: white;
            }

            .btn-table.stats {
                background: var(--secondary-gradient);
                color: white;
            }

            .btn-table:hover {
                transform: scale(1.05);
                opacity: 0.9;
            }

        /* Modern Input */
        .modern-input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            font-size: 1rem;
            transition: border-color 0.2s ease;
            background: #fff;
        }

            .modern-input:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.1);
            }



        .modal-content {
            background: #fff;
            border-radius: 18px;
            box-shadow: var(--shadow-lg);
            padding: 32px 24px;
            max-width: 520px;
            width: 100%;
            position: relative;
            z-index: 10000;
            animation: modalUpFade 0.35s cubic-bezier(.4,0,.2,1);
        }

        @@keyframes modalUpFade {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.98);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 0.5rem;
                color: var(--primary-color);
            }

        textarea.modern-input {
            min-height: 100px;
            resize: vertical;
        }

        .modal-actions {
            display: flex;
            gap: 0.75rem;
            margin-top: 1.5rem;
            justify-content: flex-end;
        }

        /* Enhanced Modal Styles */
        .answer-field {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 12px;
            border: 2px solid transparent;
            transition: all 0.2s ease;
        }

            .answer-field.correct-answer {
                background: #d4edda;
                border-color: #28a745;
            }

            .answer-field:hover {
                background: #e9ecef;
            }

            .answer-field.correct-answer:hover {
                background: #c3e6cb;
            }

        .answer-input {
            flex: 1;
            border: none;
            background: transparent;
            padding: 0.5rem;
            font-size: 1rem;
            border-radius: 6px;
            transition: background-color 0.2s ease;
        }

            .answer-input:focus {
                background: white;
                outline: none;
                box-shadow: 0 0 0 2px rgba(108, 92, 231, 0.2);
            }

        .correct-radio {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: #28a745;
        }

        .remove-answer-btn {
            background: #dc3545;
            color: white;
            border: none;
            padding: 0.4rem 0.6rem;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
            transition: all 0.2s ease;
            opacity: 0.8;
        }

            .remove-answer-btn:hover {
                opacity: 1;
                transform: scale(1.05);
            }

        .answer-number {
            background: #6c5ce7;
            color: white;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.875rem;
            flex-shrink: 0;
        }

        .correct-answer .answer-number {
            background: #28a745;
        }

        /* Validation styles */
        .answer-field.error {
            border-color: #dc3545;
            background: #f8d7da;
        }

        /* Loading states */
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-layout {
                flex-direction: column;
            }

            .lessons-sidebar {
                width: 100%;
                max-height: 300px;
            }

            .questions-header h2 {
                font-size: 1.8rem;
            }

            .modern-btn {
                padding: 0.5rem 1rem !important;
                font-size: 0.9rem !important;
            }

            .btn-table {
                padding: 0.3rem 0.6rem;
                font-size: 0.8rem;
            }

            .modal-content {
                max-width: 95vw !important;
                padding: 1rem !important;
            }

            .answer-field {
                flex-direction: column;
                align-items: stretch;
                gap: 0.5rem;
            }

                .answer-field .answer-number {
                    align-self: flex-start;
                }

            .modal-actions {
                flex-direction: column;
                gap: 0.5rem !important;
            }

                .modal-actions .modern-btn {
                    width: 100%;
                    justify-content: center;
                }

            .lesson-header-info {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .question-actions {
                justify-content: center;
            }
        }

        /* Accessibility improvements */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* Focus indicators */
        .lesson-item:focus,
        .chapter-header:focus {
            outline: 2px solid var(--primary-color);
            outline-offset: 2px;
        }

        /* Print styles */
        @@media print {
            .modal-background, .lessons-sidebar, .question-actions {
                display: none !important;
            }

            .main-layout {
                flex-direction: column;
            }

            .main-content {
                width: 100%;
                box-shadow: none;
                border: 1px solid #ddd;
            }
        }

        .modal-content {
            background: #fff;
            border-radius: 18px;
            box-shadow: var(--shadow-lg);
            padding: 32px 24px;
            max-width: 520px;
            width: 100%;
            position: relative;
            z-index: 10000;
            animation: modalUpFade 0.35s cubic-bezier(.4,0,.2,1);
        }

        /* NEW/UPDATED: center modal backgrounds */
        .modal-background {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: none;
            align-items: center;
            justify-content: center;
            background: rgba(0,0,0,0.45);
            z-index: 1050;
            padding: 20px;
            overflow: auto;
        }

            .modal-background[style*="display: block"] {
                display: flex !important;
            }

            .modal-background .modal-content {
                margin: 0 !important;
            }

    </style>
</head>
<body>
    <div class="questions-header">
        <h2>
            <i class="fa-solid fa-book-open-reader"></i>
            @Localizer["Questions"]
        </h2>
    </div>

    <div id="js-localization"
         data-search-placeholder="@Localizer["SearchPlaceholder"]"
         data-search-btn="@Localizer["SearchBtn"]"
         data-clear-btn="@Localizer["ClearBtn"]"
         data-select-subject-year="@Localizer["SelectSubjectYear"]"
         data-no-lessons="@Localizer["NoLessons"]"
         data-no-questions="@Localizer["NoQuestions"]"
         data-add-question-btn="@Localizer["AddQuestionBtn"]"
         data-edit-btn="@Localizer["EditBtn"]"
         data-delete-btn="@Localizer["DeleteBtn"]"
         data-show-answers-btn="@Localizer["ShowAnswersBtn"]"
         data-add-answers-btn="@Localizer["AddAnswersBtn"]"
         data-processing="@Localizer["Processing"]"
         data-saved="@Localizer["Saved"]"
         data-failed="@Localizer["Failed"]"
         data-error-occurred="@Localizer["ErrorOccurred"]"
         data-please-fill-all-fields="@Localizer["PleaseFillAllFields"]"
         data-delete-question-confirm="@Localizer["DeleteQuestionConfirm"]"
         data-delete-answer-confirm="@Localizer["DeleteAnswerConfirm"]"
         data-lesson-selected="@Localizer["LessonSelected"]"
         data-questions-for-lesson="@Localizer["QuestionsForLesson"]"
         data-enter-answer-option="@Localizer["EnterAnswerOption"]"
         data-at-least-two-answers-required="@Localizer["AtLeastTwoAnswersRequired"]"
         data-all-answer-fields-required="@Localizer["AllAnswerFieldsRequired"]"
         data-duplicate-answers-not-allowed="@Localizer["DuplicateAnswersNotAllowed"]"
         data-select-correct-answer="@Localizer["SelectCorrectAnswer"]"
         data-question-content-required="@Localizer["QuestionContentRequired"]"
         data-saving-question-and-answers="@Localizer["SavingQuestionAndAnswers"]"
         data-question-answers-saved="@Localizer["QuestionAnswersSaved"]"
         data-failed-to-save-question="@Localizer["FailedToSaveQuestion"]"
         data-error-saving-question="@Localizer["ErrorSavingQuestion"]"
         data-could-not-load-existing-answers="@Localizer["CouldNotLoadExistingAnswers"]"
         data-no-answers-found="@Localizer["NoAnswersFound"]"
         data-loading-answers="@Localizer["LoadingAnswers"]"
         data-loading-lessons="@Localizer["LoadingLessons"]"
         data-error-loading-questions="@Localizer["ErrorLoadingQuestions"]"
         data-add-chapter-btn="@Localizer["AddChapterBtn"]"
         data-add-lesson-btn="@Localizer["AddLessonBtn"]"
         data-select-option="@Localizer["SelectOption"]"
         data-error-loading-lessons-hierarchy="@Localizer["ErrorLoadingLessonsHierarchy"]" />

    <div id="user-root-info-box" style="display: none;"></div>

    <!-- Subject-Year Selector -->
    <div class="subject-year-selector">
        <label for="subjectYearSelect">
            <i class="fas fa-filter"></i>
            @Localizer["SelectSubjectYear"]
        </label>
        <select id="subjectYearSelect" class="modern-input">
            <option value="">@Localizer["SelectOption"]</option>
        </select>
    </div>

    <!-- Main Layout -->
    <div class="main-layout" id="mainLayout" style="display: none;">
        <!-- Lessons Sidebar -->
        <div class="lessons-sidebar">
            <h3>
                <i class="fas fa-list-ul"></i>
                @Localizer["LessonsHierarchy"]
            </h3>
            <div id="lessonsHierarchy">
                <div class="empty-state">
                    <i class="fas fa-book-open"></i>
                    <div>@Localizer["SelectSubjectYear"]</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div id="noLessonSelected" class="empty-state">
                <i class="fas fa-arrow-left"></i>
                <div>@Localizer["LessonSelected"]</div>
            </div>

            <div id="lessonContent" style="display: none;">
                <!-- Lesson Header -->
                <div class="lesson-header-info">
                    <div class="lesson-title">
                        <i class="fas fa-book"></i>
                        <span id="selectedLessonName">@Localizer["LessonName"]</span>
                    </div>
                    <button class="modern-btn primary-btn" id="addQuestionBtn">
                        <i class="fas fa-plus"></i>
                        @Localizer["AddQuestionBtn"]
                    </button>
                </div>

                <!-- Search Bar for Questions -->
                <div style="margin-bottom: 1rem;">
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="text" id="questionSearchInput" class="modern-input" placeholder="@Localizer["SearchPlaceholder"]" style="flex: 1;">
                        <button id="questionSearchBtn" class="modern-btn secondary-btn">
                            <i class="fas fa-search"></i>
                            @Localizer["SearchBtn"]
                        </button>
                        <button id="questionSearchClearBtn" class="modern-btn secondary-btn" style="display: none;">
                            <i class="fas fa-times"></i>
                            @Localizer["ClearBtn"]
                        </button>
                    </div>
                </div>

                <!-- Questions Container -->
                <div class="questions-container" id="questionsContainer">
                    <!-- Questions will be loaded here -->
                </div>

                <!-- Pagination -->
                <div id="paginationContainer" style="text-align: center; margin-top: 1.5rem;"></div>
            </div>
        </div>
    </div>

    <!-- Enhanced Question Modal with Answers -->
    <div id="question-modal" class="modal-background">
        <div class="modal-content" style="max-width: 650px;">
            <h3 id="question-modal-title">@Localizer["AddQuestionBtn"] @Localizer["ShowAnswersBtn"]</h3>
            <form id="question-form">
                <input type="hidden" id="question-id" name="QuestionCode" />
                <input type="hidden" id="question-lessoncode" name="LessonCode" />

                <!-- Question Content -->
                <div class="form-group">
                    <label for="question-content">@Localizer["QuestionContent"] <span style="color:red;">*</span></label>
                    <textarea id="question-content" name="QuestionContent" required class="modern-input"
                              placeholder="@Localizer["QuestionContent"]" style="min-height: 80px;"></textarea>
                </div>

                <!-- Exam Code (Optional) -->
                <div class="form-group">
                    <label for="question-examcode">@Localizer["ExamCode"]</label>
                    <input type="number" id="question-examcode" name="ExamCode" class="modern-input"
                           placeholder="@Localizer["ExamCode"]" />
                </div>

                <!-- Answers Section -->
                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
                        <i class="fas fa-list-ol"></i>
                        @Localizer["AddAnswersBtn"] <span style="color:red;">*</span>
                        <small style="color: #666; font-weight: normal;">(@Localizer["IsCorrectAnswer"])</small>
                    </label>

                    <div id="answers-container">
                        <!-- Answer fields will be added dynamically -->
                    </div>

                    <div style="margin-top: 1rem; display: flex; gap: 0.5rem; align-items: center;">
                        <button type="button" id="add-answer-btn" class="modern-btn secondary-btn">
                            <i class="fas fa-plus"></i> @Localizer["AddAnotherAnswer"]
                        </button>
                        <small style="color: #666;">@Localizer["AtLeastTwoAnswersRequired"]</small>
                    </div>
                </div>

                <div class="modal-actions" style="margin-top: 1.5rem;">
                    <button type="submit" class="modern-btn success-btn" id="save-question-btn">
                        <i class="fas fa-save"></i> @Localizer["Saved"] @Localizer["AddAnswersBtn"]
                    </button>
                    <button type="button" id="cancel-question-btn" class="modern-btn secondary-btn">
                        <i class="fas fa-times"></i> @Localizer["CancelBtn"]
                    </button>
                </div>

                <div id="question-message" style="margin-top: 1rem; padding: 0.75rem; border-radius: 8px; display: none;"></div>
            </form>
        </div>
    </div>

    <!-- Add Chapter Modal -->
    <div id="addChapterModal" class="modal-background" style="display:none;">
        <div class="modal-content" style="max-width: 500px;">
            <h3><i class="fas fa-plus"></i> @Localizer["addChapterBtn"]</h3>
            <form id="addChapterForm">
                <div class="form-group">
                    <label>@Localizer["ChapterName"] <span style="color:red">*</span></label>
                    <input type="text" name="LessonName" class="modern-input" required placeholder="@Localizer["ChapterName"]" />
                </div>
                <div class="form-group">
                    <label>@Localizer["EducationYear"] <span style="color:red">*</span></label>
                    <select name="EduYearCode" class="modern-input" required></select>
                </div>
                <div class="form-group">
                    <label>@Localizer["Teacher"] <span style="color:red">*</span></label>
                    <select name="TeacherCode" class="modern-input" required></select>
                </div>
                <div class="form-group">
                    <label>@Localizer["Subject"] <span style="color:red">*</span></label>
                    <select name="SubjectCode" class="modern-input" required></select>
                </div>
                <div class="form-group">
                    <label>@Localizer["Year"] <span style="color:red">*</span></label>
                    <select name="YearCode" class="modern-input" required></select>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="modern-btn success-btn"><i class="fas fa-save"></i> @Localizer["Saved"]</button>
                    <button type="button" class="modern-btn secondary-btn" onclick="$('#addChapterModal').hide();">@Localizer["CancelBtn"]</button>
                </div>
                <div id="addChapterMsg" style="display:none; margin-top:10px;"></div>
            </form>
        </div>
    </div>

    <!-- Add Lesson Modal -->
    <div id="addLessonModal" class="modal-background" style="display:none;">
        <div class="modal-content" style="max-width: 400px;">
            <h3><i class="fas fa-plus"></i> @Localizer["addLessonBtn"]</h3>
            <form id="addLessonForm">
                <div class="form-group">
                    <label>@Localizer["LessonName"] <span style="color:red">*</span></label>
                    <input type="text" name="LessonName" class="modern-input" required placeholder="@Localizer["LessonName"]" />
                </div>
                <!-- Hidden fields for context -->
                <input type="hidden" name="RootCode" />
                <input type="hidden" name="TeacherCode" />
                <input type="hidden" name="SubjectCode" />
                <input type="hidden" name="EduYearCode" />
                <input type="hidden" name="YearCode" />
                <input type="hidden" name="ChapterCode" />
                <div class="modal-actions">
                    <button type="submit" class="modern-btn success-btn"><i class="fas fa-save"></i> @Localizer["Saved"]</button>
                    <button type="button" class="modern-btn secondary-btn" onclick="$('#addLessonModal').hide();">@Localizer["CancelBtn"]</button>
                </div>
                <div id="addLessonMsg" style="display:none; margin-top:10px;"></div>
            </form>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/js/Question.js"></script>
    }
</body>
</html>