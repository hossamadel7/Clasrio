@{
    ViewBag.Title = "Change Your Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center mt-4">Change Your Password</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form id="changePasswordForm" asp-action="ForceChangePassword" method="post" autocomplete="off">
            <div class="form-group mb-3">
                <label for="newPassword">New Password</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" maxlength="50" />
            </div>
            <div class="form-group mb-3">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" maxlength="50" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/ChangePassword.js"></script>
}