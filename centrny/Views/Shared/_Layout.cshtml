@using centrny.Controllers
@inject centrny.Models.CenterContext DbContext
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture;
    var isRtl = culture.Name.StartsWith("ar");
    var dir = isRtl ? "rtl" : "ltr";
    // Sidebar now shows pages according to GroupPages (group's authorized pages)
    var sidebarPages = User.Identity.IsAuthenticated
        ? LayoutController.GetSidebarPagesForUser(DbContext, User, Context.Session)
        : new List<SidebarPageViewModel>();

    // Fetch the root name for the logged-in user (fallback to "Centrny")
    string rootName = "Centrny";
    if (User.Identity.IsAuthenticated)
    {
        var username = User.Identity.Name;
        var currentUser = DbContext.Users.FirstOrDefault(u => u.Username == username);
        if (currentUser != null)
        {
            var group = DbContext.Groups.FirstOrDefault(g => g.GroupCode == currentUser.GroupCode);
            if (group != null)
            {
                var root = DbContext.Roots.FirstOrDefault(r => r.RootCode == group.RootCode);
                if (root != null && !string.IsNullOrEmpty(root.RootName))
                {
                    rootName = root.RootName;
                }
            }
        }
    }
    // For AR language, translate static labels
    string logoutText = isRtl ? "تسجيل الخروج" : "Logout";
    string loginText = isRtl ? "تسجيل الدخول" : "Login";
}
<!DOCTYPE html>
<html lang="@culture.Name" dir="@dir">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @rootName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/centrny.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">

    <link rel="icon" type="image/png" href="~/Image/clasrio-high-resolution-logoo.png">
    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-bg: linear-gradient(135deg, #032a9b 0%, #3c78d5 50%, #2450a1 100%);
            --sidebar-text: #e2e8f0;
            --sidebar-hover: rgba(255,255,255,0.10);
            --sidebar-active: rgba(255,255,255,0.15);
            --header-height: 64px;
            --transition-speed: 0.3s;
        }

        html[dir="rtl"] body,
        html[dir="rtl"] .modern-sidebar {
            direction: rtl;
            text-align: right;
        }

        html[dir="ltr"] body,
        html[dir="ltr"] .modern-sidebar {
            direction: ltr;
            text-align: left;
        }

        .modern-sidebar {
            position: fixed;
            top: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            z-index: 1040;
            display: flex;
            flex-direction: column;
            will-change: transform;
            border-radius: 0;
            font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            transition: transform var(--transition-speed) cubic-bezier(0.4,0,0.2,1);
        }

        /* LTR: sidebar on left, closed = translateX(-100%) */
        html[dir="ltr"] .modern-sidebar {
            left: 0;
            right: auto;
            transform: translateX(-100%);
            box-shadow: 4px 0 24px rgba(0,0,0,0.08);
        }

            html[dir="ltr"] .modern-sidebar.open {
                transform: translateX(0);
            }

        /* RTL: sidebar on right, closed = translateX(100%) */
        html[dir="rtl"] .modern-sidebar {
            left: auto;
            right: 0;
            transform: translateX(100%);
            box-shadow: -4px 0 24px rgba(0,0,0,0.08);
        }

            html[dir="rtl"] .modern-sidebar.open {
                transform: translateX(0);
            }

        /* Overlay covers content */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.3);
            z-index: 1039;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.2s;
        }

            .sidebar-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.2rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-weight: 700;
        }

            .sidebar-brand .fa-graduation-cap {
                color: #fbbf24;
                font-size: 1.7rem;
            }

        .brand-text {
            font-size: 1.3rem;
            font-weight: 700;
            color: #fff;
            letter-spacing: 0.03em;
        }

        .sidebar-toggle-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 1.3rem;
            padding: 0.3rem 0.5rem;
            cursor: pointer;
            border-radius: 6px;
            transition: background 0.2s;
        }

            .sidebar-toggle-btn:hover {
                background: var(--sidebar-hover);
            }

        .sidebar-user-profile {
            display: flex;
            align-items: center;
            gap: 0.9rem;
            padding: 1.2rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            background: rgba(255,255,255,0.03);
            border-radius: 0;
        }

        .user-avatar {
            background: #fbbf24;
            color: #fff;
            font-size: 1.6rem;
            width: 46px;
            height: 46px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 10px rgba(251,191,36,0.12);
        }

        .user-info {
            flex: 1;
            min-width: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
        }

        .user-name {
            font-size: 1.07rem;
            font-weight: 700;
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            letter-spacing: 0.01em;
        }

        .user-role {
            font-size: 0.86rem;
            color: #ffe082;
            margin-top: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-weight: 700;
            letter-spacing: 0.01em;
            opacity: 0.95;
        }

        .sidebar-user-profile:hover {
            background: rgba(255,255,255,0.07);
            box-shadow: 0 2px 8px rgba(30,58,138,0.10);
            cursor: pointer;
            transition: background 0.2s, box-shadow 0.2s;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
        }

        .nav-list {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.9rem;
            padding: 1.05rem 1.6rem;
            color: var(--sidebar-text);
            text-decoration: none;
            border-radius: 0 20px 20px 0;
            margin-right: 1rem;
            transition: background 0.18s, color 0.18s, transform 0.18s;
            position: relative;
            font-weight: 700;
            font-size: 1.12rem;
            min-height: 52px;
            letter-spacing: 0.015em;
        }

            .nav-link:hover, .nav-link.active {
                background: var(--sidebar-hover);
                color: #fff;
                transform: translateX(5px);
            }

        .nav-icon {
            font-size: 1.13rem;
            min-width: 22px;
            text-align: center;
        }

        .nav-text {
            white-space: nowrap;
        }

        .sidebar-footer {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.08);
        }

        .logout-link {
            color: #fca5a5 !important;
        }

            .logout-link:hover {
                background: rgba(251,113,133,0.08) !important;
                color: #fee2e2 !important;
            }

        .main-wrapper {
            min-height: 100vh;
            transition: margin-left 0.3s, margin-right 0.3s;
            margin-left: 0;
            margin-right: 0;
        }
        /* LTR: push content right */
        html[dir="ltr"] .modern-sidebar.open ~ .main-wrapper {
            margin-left: var(--sidebar-width);
            margin-right: 0;
        }
        /* RTL: push content left */
        html[dir="rtl"] .modern-sidebar.open ~ .main-wrapper {
            margin-right: var(--sidebar-width);
            margin-left: 0;
        }

        .top-header {
            height: var(--header-height);
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 101;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .menu-toggle-btn {
            background: none;
            border: none;
            font-size: 1.25rem;
            color: #6b7280;
            padding: 0.4rem 0.7rem;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.18s;
        }

            .menu-toggle-btn:hover {
                background: #f3f4f6;
                color: #3730a3;
            }

        .page-title {
            font-size: 1.15rem;
            font-weight: 600;
            color: #18181b;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .main-content {
            flex: 1;
            padding: 2rem 1.7rem;
            background: #f8fafc;
        }
        /* Modern Language Toggle Switch */
        .lang-toggle-switch {
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 85px;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 62px;
            height: 32px;
            margin: 0 8px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: -3px;
            left: 5px;
            right: -6px;
            bottom: 0;
            background-color: #bdbdbd;
            transition: .4s;
            border-radius: 32px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 24px;
                width: 24px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        .switch input:checked + .slider {
            background-color: #2450a1;
        }

            .switch input:checked + .slider:before {
                transform: translateX(30px);
            }

        .lang-label {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            font-size: 1rem;
            color: #2450a1;
            pointer-events: none;
            transition: color 0.2s;
        }

        .lang-en {
            left: 10px;
        }

        .lang-ar {
            right: 1px;
        }

        .switch input:checked ~ .lang-en {
            color: #fff;
        }

        .switch input:not(:checked) ~ .lang-ar {
            color: #fff;
        }

        @@media (max-width: 992px) {
            .modern-sidebar {
                width: var(--sidebar-width);
            }

            .main-wrapper {
                margin-left: 0 !important;
                margin-right: 0 !important;
            }

            .sidebar-overlay {
                display: block;
            }
        }

        @@media (min-width: 993px) {
            .sidebar-overlay {
                display: none !important;
            }
        }

        @@media (max-width: 576px) {
            .main-content {
                padding: 1rem 0.5rem;
            }

            .top-header {
                padding: 0 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <nav class="modern-sidebar" id="modernSidebar">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <i class="fas fa-graduation-cap"></i>
                <img src="~/image/clasrio-high-resolution-logoo.png" alt="Clasrio" style="height: 32px; width: auto;" />
            </div>
            <button class="sidebar-toggle-btn" type="button" id="sidebarCloseBtn">
                <i class="fas fa-times"></i>
            </button>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar-user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-info">
                    <div class="user-name">
                        @User.Identity.Name
                    </div>
                    <div class="user-role">
                        @User.FindFirst("GroupName")?.Value
                    </div>
                </div>
            </div>
        }
        <div class="sidebar-nav">
            <ul class="nav-list">
                @if (sidebarPages.Any())
                {
                    @foreach (var sidebarPage in sidebarPages)
                    {
                        <li>
                            <a class="nav-link" asp-controller="@sidebarPage.Controller" asp-action="@sidebarPage.Action">
                                <i class="@sidebarPage.Icon nav-icon"></i>
                                <span class="nav-text">@sidebarPage.Text</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="sidebar-footer">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link logout-link" href="#" id="logoutBtn">
                    <i class="fas fa-sign-out-alt nav-icon"></i>
                    <span class="nav-text">@logoutText</span>
                </a>
            }
            else
            {
                <a class="nav-link" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-sign-in-alt nav-icon"></i>
                    <span class="nav-text">@loginText</span>
                </a>
            }
        </div>
    </nav>
    <div class="main-wrapper" id="mainWrapper">
        <header class="top-header">
            <div class="header-left">
                <button class="menu-toggle-btn" id="menuToggleBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <span class="page-title">@ViewData["Title"]</span>
            </div>
            <div class="header-right">
                <div class="lang-toggle-switch">
                    <form id="langForm" method="post" asp-controller="Home" asp-action="SetLanguage" style="display:inline;">
                        <input type="hidden" name="culture" id="langHiddenInput" value="@(culture.Name.StartsWith("ar") ? "ar" : "en")" />
                        <label class="switch">
                            <input type="checkbox" id="langSwitch" @(culture.Name.StartsWith("ar") ? "checked" : "")>
                            <span class="slider"></span>
                            <span class="lang-label lang-en">EN</span>
                            <span class="lang-label lang-ar">AR</span>
                        </label>
                    </form>
                </div>
            </div>
        </header>
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <form id="logoutForm" method="post" asp-controller="Login" asp-action="Logout" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Layout.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var langSwitch = document.getElementById('langSwitch');
            var langForm = document.getElementById('langForm');
            var langHiddenInput = document.getElementById('langHiddenInput');
            if(langSwitch) {
                langSwitch.addEventListener('change', function() {
                    langHiddenInput.value = langSwitch.checked ? 'ar' : 'en';
                    langForm.submit();
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>