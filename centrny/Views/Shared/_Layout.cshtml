@using centrny.Controllers
@inject centrny.Models.CenterContext DbContext
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture;
    var isRtl = culture.Name.StartsWith("ar");
    var dir = isRtl ? "rtl" : "ltr";

    // Sidebar now shows pages according to GroupPages (group's authorized pages)
    var sidebarPages = User.Identity.IsAuthenticated
        ? LayoutController.GetSidebarPagesForUser(DbContext, User, Context.Session)
        : new List<SidebarPageViewModel>();

    // Fetch the root name for the logged-in user (fallback to "Centrny")
    string rootName = "Centrny";
    if (User.Identity.IsAuthenticated)
    {
        var username = User.Identity.Name;
        var currentUser = DbContext.Users.FirstOrDefault(u => u.Username == username);
        if (currentUser != null)
        {
            var group = DbContext.Groups.FirstOrDefault(g => g.GroupCode == currentUser.GroupCode);
            if (group != null)
            {
                var root = DbContext.Roots.FirstOrDefault(r => r.RootCode == group.RootCode);
                if (root != null && !string.IsNullOrEmpty(root.RootName))
                {
                    rootName = root.RootName;
                }
            }
        }
    }

    // For AR language, translate static labels
    string logoutText = isRtl ? "تسجيل الخروج" : "Logout";
    string loginText = isRtl ? "تسجيل الدخول" : "Login";
}
<!DOCTYPE html>
<html lang="@culture.Name" dir="@dir">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @rootName</title>

    <!-- External CSS Libraries -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Project CSS Files -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clasrio-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/centrny.styles.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Image/clasrio-high-resolution-logoo.png">

    <!-- Adaptive Sidebar Styles (RTL / LTR) -->
    <style>
        /* Ensure body class controls direction-specific styling */
        body.ltr .modern-sidebar {
            left: 0;
            transform: translateX(-100%);
        }

            body.ltr .modern-sidebar.open {
                transform: translateX(0);
            }

        body.rtl .modern-sidebar {
            right: 0;
            left: auto;
            transform: translateX(100%);
        }

            body.rtl .modern-sidebar.open {
                transform: translateX(0);
            }

        .modern-sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            width: 270px;
            max-width: 90%;
            background: #ffffff;
            z-index: 1040;
            display: flex;
            flex-direction: column;
            box-shadow: 0 0 25px rgba(0,0,0,.08);
            transition: transform .35s ease;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .sidebar-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.35);
            z-index: 1030;
            opacity: 0;
            visibility: hidden;
            transition: opacity .3s ease;
        }

            .sidebar-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        body.sidebar-open {
            overflow: hidden; /* Prevent background scroll when sidebar open */
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: .85rem 1rem;
            border-bottom: 1px solid #eee;
        }

            .sidebar-header .sidebar-brand img {
                max-height: 42px;
                width: auto;
            }

        .sidebar-toggle-btn,
        .menu-toggle-btn {
            background: #1d4ed8;
            border: none;
            color: #fff;
            width: 42px;
            height: 42px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.1rem;
            transition: background .25s;
        }

            .sidebar-toggle-btn:hover,
            .menu-toggle-btn:hover {
                background: #1a43bd;
            }

        .sidebar-user-profile {
            padding: 1rem 1rem 1.25rem;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }

            .sidebar-user-profile .user-avatar {
                font-size: 2.6rem;
                color: #1d4ed8;
                margin-bottom: .5rem;
            }

            .sidebar-user-profile .user-name {
                font-weight: 600;
            }

            .sidebar-user-profile .user-role {
                font-size: .8rem;
                color: #1d4ed8;
            }

        .sidebar-nav {
            flex: 1 1 auto;
            padding: .25rem 0 .75rem;
        }

            .sidebar-nav .nav-list {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .sidebar-nav .nav-link {
                display: flex;
                align-items: center;
                gap: .75rem;
                padding: .65rem 1.1rem;
                color: #1e293b;
                font-weight: 500;
                text-decoration: none;
                position: relative;
                transition: background .25s,color .25s;
                border-radius: 8px;
                margin: 2px .65rem;
            }

        body.rtl .sidebar-nav .nav-link {
            justify-content: flex-start;
        }

        .sidebar-nav .nav-link:hover {
            background: #eff6ff;
            color: #1d4ed8;
        }

        .sidebar-nav .nav-link .nav-icon {
            width: 20px;
            text-align: center;
            font-size: .95rem;
            opacity: .85;
        }

        .sidebar-nav .nav-link.active,
        .sidebar-nav .nav-link:focus {
            background: #1d4ed8;
            color: #fff;
        }

        .sidebar-footer {
            padding: .85rem 1rem 1.15rem;
            border-top: 1px solid #f0f0f0;
        }

            .sidebar-footer .nav-link {
                background: #fee2e2;
                color: #b91c1c;
                justify-content: center;
                font-weight: 600;
                margin: 0;
            }

                .sidebar-footer .nav-link.logout-link:hover {
                    background: #fca5a5;
                    color: #7f1d1d;
                }

        body.rtl .sidebar-footer .nav-link .nav-icon {
            transform: scaleX(-1); /* mirror logout arrow direction */
        }

        /* Top header alignment adjustments for RTL */
        .top-header {
            position: sticky;
            top: 0;
            z-index: 1020;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: .65rem 1rem;
            background: #fff;
            box-shadow: 0 2px 4px rgba(0,0,0,.04);
        }

            .top-header .header-left,
            .top-header .header-right {
                display: flex;
                align-items: center;
                gap: .75rem;
            }

        body.rtl .top-header .header-left {
            flex-direction: row-reverse;
        }

        .lang-toggle-switch {
            display: flex;
            align-items: center;
        }

            .lang-toggle-switch .switch {
                position: relative;
                display: inline-block;
                width: 70px;
                height: 32px;
                background: #1d4ed8;
                border-radius: 32px;
                cursor: pointer;
            }

                .lang-toggle-switch .switch input {
                    display: none;
                }

                .lang-toggle-switch .switch .slider {
                    position: absolute;
                    top: 4px;
                    left: 4px;
                    width: 24px;
                    height: 24px;
                    background: #fff;
                    border-radius: 50%;
                    transition: transform .3s;
                }

                .lang-toggle-switch .switch input:checked + .slider {
                    transform: translateX(38px);
                }

            .lang-toggle-switch .lang-label {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                font-size: .7rem;
                font-weight: 600;
                color: #fff;
                letter-spacing: .5px;
            }

            .lang-toggle-switch .lang-en {
                left: 10px;
            }

            .lang-toggle-switch .lang-ar {
                right: 10px;
            }

        /* Responsive improvements */
        @@media (max-width: 575.98px) {
            .modern-sidebar

        {
            width: 250px;
        }

        .page-title {
            font-size: .95rem;
        }

        }
    </style>
</head>
<body class="@(isRtl ? "rtl" : "ltr")">
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay" role="button" aria-label="Overlay"></div>

    <!-- Modern Sidebar -->
    <nav class="modern-sidebar" id="modernSidebar" aria-label="Main Sidebar" tabindex="-1">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <img src="~/Image/clasrio-high-resolution-logo-transparent (2).png" alt="Clasrio" />
            </div>
           
        </div>

        <!-- User Profile Section (Only when authenticated) -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar-user-profile">
                <div class="user-avatar" aria-hidden="true">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-info">
                    <div class="user-name">
                        @User.Identity.Name
                    </div>
                    <div class="user-role">
                        @User.FindFirst("GroupName")?.Value
                    </div>
                </div>
            </div>
        }

        <!-- Navigation Menu -->
        <div class="sidebar-nav">
            <ul class="nav-list" role="menu">
                @if (sidebarPages.Any())
                {
                    @foreach (var sidebarPage in sidebarPages)
                    {
                        <li role="none">
                            <a class="nav-link"
                               role="menuitem"
                               asp-controller="@sidebarPage.Controller"
                               asp-action="@sidebarPage.Action">
                                <i class="@sidebarPage.Icon nav-icon" aria-hidden="true"></i>
                                <span class="nav-text">@sidebarPage.Text</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link logout-link" href="#" id="logoutBtn">
                    <i class="fas fa-sign-out-alt nav-icon" aria-hidden="true"></i>
                    <span class="nav-text">@logoutText</span>
                </a>
            }
            else
            {
                <a class="nav-link" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-sign-in-alt nav-icon" aria-hidden="true"></i>
                    <span class="nav-text">@loginText</span>
                </a>
            }
        </div>
    </nav>

    <!-- Main Content Wrapper -->
    <div class="main-wrapper" id="mainWrapper">
        <!-- Top Header -->
        <header class="top-header">
            <div class="header-left">
                <button class="menu-toggle-btn" id="menuToggleBtn" aria-label="Open Menu">
                    <i class="fas fa-bars"></i>
                </button>
                <span class="page-title">@ViewData["Title"]</span>
            </div>
            <div class="header-right">
                <!-- Language Toggle Switch -->
                <div class="lang-toggle-switch">
                    <form id="langForm" method="post" asp-controller="Home" asp-action="SetLanguage" style="display:inline;">
                        <input type="hidden" name="culture" id="langHiddenInput" value="@(culture.Name.StartsWith("ar") ? "ar" : "en")" />
                        <label class="switch" aria-label="Language Switch">
                            <input type="checkbox" id="langSwitch" @(culture.Name.StartsWith("ar") ? "checked" : "")>
                            <span class="slider"></span>
                            <span class="lang-label lang-en">EN</span>
                            <span class="lang-label lang-ar">AR</span>
                        </label>
                    </form>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Hidden Logout Form -->
    @if (User.Identity.IsAuthenticated)
    {
        <form id="logoutForm" method="post" asp-controller="Login" asp-action="Logout" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sidebar / Layout Script -->
    <script src="~/js/Layout.js" asp-append-version="true"></script>

    <!-- Language Switch Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var langSwitch = document.getElementById('langSwitch');
            var langForm = document.getElementById('langForm');
            var langHiddenInput = document.getElementById('langHiddenInput');

            if (langSwitch) {
                langSwitch.addEventListener('change', function () {
                    langHiddenInput.value = langSwitch.checked ? 'ar' : 'en';
                    langForm.submit();
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>