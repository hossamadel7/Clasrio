@{
    ViewData["Title"] = "Subscription Plans";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/Subscription.css" />

<div class="subscription-page">
    <div class="subscription-container">
        <div class="subscription-header">
            <h2>Subscription Plans</h2>
            <p style="color:black;">Create and manage subscription plans for your educational center</p>
            <button class="btn create-plan-btn" onclick="openCreateModal()">
                <i class="fas fa-plus"></i> Create New Plan
            </button>
        </div>

        <!-- Loading state -->
        <div id="loading-state" class="loading-spinner" style="display: none;">
            <div class="spinner"></div>
        </div>

        <!-- Plans container -->
        <div class="plans-grid" id="plans-container">
            <!-- Subscription plans will be rendered here by JS -->
        </div>

        <!-- Empty state -->
        <div id="empty-state" class="empty-state" style="display: none;">
            <div class="empty-state-icon">📋</div>
            <h3>No Subscription Plans Yet</h3>
            <p>Get started by creating your first subscription plan to offer discounted session packages to your students.</p>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade subscription-modal" id="planModal" tabindex="-1" aria-labelledby="planModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="planForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="planModalLabel">
                        <i class="fas fa-edit"></i> Create/Edit Subscription Plan
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="SubPlanCode" name="SubPlanCode" />

                    <div class="form-group">
                        <label for="SubPlanName" class="form-label">
                            <i class="fas fa-tag"></i> Plan Name
                        </label>
                        <input type="text" class="form-control" id="SubPlanName" name="SubPlanName"
                               placeholder="e.g., Monthly 4-Session Package" required />
                    </div>

                    <div class="form-group">
                        <label for="Price" class="form-label">
                            <i class="fas fa-dollar-sign"></i> Price
                        </label>
                        <input type="number" class="form-control" id="Price" name="Price"
                               placeholder="Enter price amount" required />
                    </div>

                    <div class="form-group">
                        <label for="Description" class="form-label">
                            <i class="fas fa-file-alt"></i> Description
                        </label>
                        <textarea class="form-control" id="Description" name="Description"
                                  placeholder="Describe the benefits and features of this plan..." required></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ExpiryMonths" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Expiry Months
                                </label>
                                <input type="number" step="0.1" class="form-control" id="ExpiryMonths" name="ExpiryMonths"
                                       placeholder="e.g., 1.0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="TotalCount" class="form-label">
                                    <i class="fas fa-list-ol"></i> Total Sessions
                                </label>
                                <input type="number" class="form-control" id="TotalCount" name="TotalCount"
                                       placeholder="e.g., 4" required readonly />
                            </div>
                        </div>
                    </div>

                    <!-- Dynamic Subjects Section -->
                    <div id="subjects-section" class="mt-4">
                        <label class="form-label d-block mb-2">
                            <i class="fas fa-book"></i> Subjects in Plan
                        </label>
                        <!-- Only one year dropdown -->
                        <div class="mb-3">
                            <select id="main-year-select" class="form-select" required>
                                <option value="">Select Year</option>
                                <!-- JS will fill options -->
                            </select>
                        </div>
                        <div id="subject-rows"></div>
                        <div class="mt-3">
                            <button type="button" class="btn add-subject-btn" id="add-subject-btn">
                                <i class="fas fa-plus"></i> Add Subject
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Plan
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Subscription.js"></script>