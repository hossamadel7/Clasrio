@using centrny.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizerFactory LocalizerFactory
@model PublicRegistrationViewModel

@{
    var Localizer = LocalizerFactory.Create("Register", System.Reflection.Assembly.GetExecutingAssembly().GetName().Name);
    ViewData["Title"] = Localizer["Title_StudentRegistration"];
    Layout = null;
    var lang = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var activeEduYear = Model.AvailableEduYears.FirstOrDefault();
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Model.RootName</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/student-registration.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/Image/clasrio-high-resolution-logoo.png">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .registration-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .registration-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 800px;
            width: 100%;
        }

        .registration-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
            padding: 40px 30px;
        }

            .registration-header h1 {
                margin: 0;
                font-size: 2rem;
                font-weight: 600;
            }

            .registration-header p {
                margin: 10px 0 0 0;
                opacity: 0.9;
                font-size: 1.1rem;
            }

        .registration-body {
            padding: 40px 30px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-primary, .btn-success, .btn-secondary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover, .btn-success:hover, .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .instructions {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

            .instructions h5 {
                color: #667eea;
                margin-bottom: 15px;
            }

            .instructions ul {
                margin: 0;
                padding-left: 20px;
            }

            .instructions li {
                margin-bottom: 8px;
                color: #6c757d;
            }

        /* Step indicator styles */
        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        .step {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            background: #e1e5e9;
            color: #667eea;
            font-weight: bold;
            text-align: center;
            font-size: 1.2rem;
            border: 2px solid #e1e5e9;
            transition: background 0.2s;
        }

            .step.active, .step.completed {
                background: #667eea;
                color: white;
                border: 2px solid #764ba2;
            }

        .form-step {
            display: none;
        }

            .form-step.active {
                display: block;
            }

        .navigation-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="registration-container">
        <div class="registration-card">
            <!-- Header -->
            <div class="registration-header">
                <i class="fas fa-user-plus fa-3x mb-3"></i>
                <h1>@Localizer["Header_Join"] @Model.RootName</h1>
                <p>@Localizer["Header_Journey"]</p>
            </div>

            <div class="registration-body">
                <!-- Instructions -->
                <div class="instructions">
                    <h5><i class="fas fa-info-circle me-2"></i>@Localizer["Instructions_Title"]</h5>
                    <ul>
                        <li>@Localizer["Instruction_1"]</li>
                        <li>@Localizer["Instruction_2"]</li>
                        <li>@Localizer["Instruction_3"]</li>
                        <li>@Localizer["Instruction_4"]</li>
                    </ul>
                </div>

                <!-- Step Indicator -->
                <div class="step-indicator">
                    <div class="step active" id="step1">1</div>
                    <div class="step" id="step2">2</div>
                    <div class="step" id="step3">3</div>
                    <div class="step" id="step4">4</div>
                    <div class="step" id="step5">5</div>
                </div>

                <!-- Validation Errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Error_Header"]</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Registration Form Multi-Step -->
                <form id="registrationForm" method="post" asp-action="PublicRegister" asp-route-root_code="@Model.RootCode">
                    <!-- Step 1: Personal Information -->
                    <div class="form-step active" id="step1Content">
                        <h3 class="mb-4">
                            <i class="fas fa-user text-primary me-2"></i>
                            @Localizer["Label_PersonalInformation"]
                        </h3>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="studentName">Full Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="studentName" name="StudentName" required maxlength="100" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="birthDate">Birthdate <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="birthDate" name="BirthDate" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="studentPhone">Student Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="studentPhone" name="StudentPhone" required maxlength="20" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="parentPhone">Father Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="parentPhone" name="StudentFatherPhone" required maxlength="20" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="motherPhone">Mother Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="motherPhone" name="StudentMotherPhone" required maxlength="20" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="fatherJob">Father Job <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="fatherJob" name="StudentFatherJob" required maxlength="50" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="motherJob">Mother Job <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="motherJob" name="StudentMotherJob" required maxlength="50" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Gender <span class="text-danger">*</span></label>
                                <div class="d-flex gap-3 mt-2">
                                    <input class="form-check-input" type="radio" name="Gender" value="true" id="genderMale" required />
                                    <label class="form-check-label" for="genderMale">Male</label>
                                    <input class="form-check-input" type="radio" name="Gender" value="false" id="genderFemale" required />
                                    <label class="form-check-label" for="genderFemale">Female</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Mode Selection and Academic Information -->
                    <div class="form-step" id="step2Content">
                        <h3 class="mb-4">
                            <i class="fas fa-school text-primary me-2"></i>
                            Academic Information
                        </h3>
                        <div class="mb-4">
                            <label class="form-label">How do you want to study? <span class="text-danger">*</span></label>
                            <div>
                                <input type="radio" class="form-check-input" name="Mode" value="Offline" id="modeOffline" checked required />
                                <label class="form-check-label me-4" for="modeOffline">Offline (in center)</label>
                                <input type="radio" class="form-check-input" name="Mode" value="Online" id="modeOnline" required />
                                <label class="form-check-label" for="modeOnline">Online</label>
                            </div>
                        </div>
                        <div class="row" id="branchRow">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="branchCode">Branch <span class="text-danger">*</span></label>
                                <select class="form-select" id="branchCode" name="BranchCode" required>
                                    <option value="">Select Branch</option>
                                    @foreach (var branch in Model.AvailableBranches)
                                    {
                                        <option value="@branch.Value">@branch.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="yearCode">Academic Year <span class="text-danger">*</span></label>
                                <select class="form-select" id="yearCode" name="YearCode" required>
                                    <option value="">Select Academic Year</option>
                                    @foreach (var year in Model.AvailableYears)
                                    {
                                        <option value="@year.Value">@year.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row" id="yearOnlyRow" style="display:none;">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="yearCodeOnline">Academic Year <span class="text-danger">*</span></label>
                                <select class="form-select" id="yearCodeOnline" name="YearCodeOnline">
                                    <option value="">Select Academic Year</option>
                                    @foreach (var year in Model.AvailableYears)
                                    {
                                        <option value="@year.Value">@year.Text</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- EduYear: Disabled, hidden input always posted -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label" for="eduYearCodeDisplay">Education Year</label>
                            <input type="text" class="form-control" id="eduYearCodeDisplay" value="@activeEduYear?.Text" disabled />
                            <input type="hidden" id="eduYearCode" name="EduYearCode" value="@activeEduYear?.Value" />
                        </div>
                    </div>

                    <!-- Step 3: Subject Selection -->
                    <div class="form-step" id="step3Content">
                        <h3 class="mb-4">
                            <i class="fas fa-books text-primary me-2"></i>
                            Subject Selection
                        </h3>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Please select your subjects.
                        </div>
                        <div id="availableSubjects"></div>
                        <div id="selectedSubjectsSummary" class="mt-4" style="display: none;">
                            <h5>Selected Subjects</h5>
                            <div id="selectedSubjectsList"></div>
                        </div>
                    </div>

                    <!-- Step 4: Schedule OR PIN -->
                    <div class="form-step" id="step4Content">
                        <div id="offlineScheduleSection">
                            <h3 class="mb-4">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                Schedule Selection
                            </h3>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Please select a schedule for each subject.
                            </div>
                            <div id="scheduleSelection"></div>
                        </div>
                        <div id="onlinePinSection" style="display:none;">
                            <h3 class="mb-4">
                                <i class="fas fa-key text-primary me-2"></i>
                                Online Registration PIN
                            </h3>
                            <div class="mb-3">
                                <label for="pinCode" class="form-label">Enter PIN Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="pinCode" maxlength="20" required autocomplete="off" />
                                <div id="pinError" class="text-danger mt-2"></div>
                            </div>
                            <button type="button" class="btn btn-primary" id="validatePinBtn">Validate PIN</button>
                        </div>
                    </div>

                    <!-- Step 5: Confirmation OR Username/Password -->
                    <div class="form-step" id="step5Content">
                        <div id="offlineSummarySection">
                            <h3 class="mb-4">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Confirmation
                            </h3>
                            <div class="alert alert-success">
                                <i class="fas fa-info-circle me-2"></i>
                                Review your information before submitting.
                            </div>
                            <div id="registrationSummary"></div>
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox" id="termsAccepted" required>
                                <label class="form-check-label" for="termsAccepted">
                                    I agree to the terms and conditions
                                </label>
                            </div>
                        </div>
                        <div id="onlineUserSection" style="display:none;">
                            <h3 class="mb-4">
                                <i class="fas fa-user-lock text-primary me-2"></i>
                                Create Online Account
                            </h3>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="username" maxlength="40" required autocomplete="off" />
                                <div id="userError" class="text-danger mt-2"></div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="password" maxlength="40" required />
                            </div>
                            <button type="button" class="btn btn-success" id="completeOnlineBtn">Register Online</button>
                        </div>
                    </div>

                    <!-- Navigation Buttons -->
                    <div class="navigation-buttons">
                        <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">
                            <i class="fas fa-arrow-left me-2"></i>Prev
                        </button>
                        <div></div>
                        <button type="button" class="btn btn-primary" id="nextBtn">
                            Next <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                        <button type="button" class="btn btn-success" id="submitBtn" style="display: none;">
                            <i class="fas fa-check me-2"></i>Complete Registration
                        </button>
                    </div>
                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>
                            Your data is secure.
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay" style="display: none;">
        <div class="loading-spinner">
            <div class="spinner-border" role="status"></div>
            <p class="mt-3 mb-0">Processing your registration...</p>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/StudentRegistration.js"></script>
</body>
</html>