@using centrny.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizerFactory LocalizerFactory
@model PublicRegistrationViewModel

@{
    var Localizer = LocalizerFactory.Create("Register", System.Reflection.Assembly.GetExecutingAssembly().GetName().Name);
    ViewData["Title"] = Localizer["Title_StudentRegistration"];
    Layout = null;
    var lang = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var activeEduYear = Model.AvailableEduYears.FirstOrDefault();
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Model.RootName</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/student-registration.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/Image/clasrio-high-resolution-logoo.png">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .registration-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .registration-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 800px;
            width: 100%;
        }

        .registration-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
            padding: 40px 30px;
        }

            .registration-header h1 {
                margin: 0;
                font-size: 2rem;
                font-weight: 600;
            }

            .registration-header p {
                margin: 10px 0 0 0;
                opacity: 0.9;
                font-size: 1.1rem;
            }

        .registration-body {
            padding: 40px 30px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-primary, .btn-success, .btn-secondary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover, .btn-success:hover, .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .instructions {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

            .instructions h5 {
                color: #667eea;
                margin-bottom: 15px;
            }

            .instructions ul {
                margin: 0;
                padding-left: 20px;
            }

            .instructions li {
                margin-bottom: 8px;
                color: #6c757d;
            }

        /* Step indicator styles */
        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        .step {
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            background: #e1e5e9;
            color: #667eea;
            font-weight: bold;
            text-align: center;
            font-size: 1.2rem;
            border: 2px solid #e1e5e9;
            transition: background 0.2s;
        }

            .step.active, .step.completed {
                background: #667eea;
                color: white;
                border: 2px solid #764ba2;
            }

        .form-step {
            display: none;
        }

            .form-step.active {
                display: block;
            }

        .navigation-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        /* Teacher and Subject Selection Styles */
        .subject-selection {
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .subject-selection:hover {
                border-color: #667eea;
                box-shadow: 0 2px 10px rgba(102, 126, 234, 0.1);
            }

            .subject-selection.selected {
                border-color: #667eea;
                background-color: #f8f9ff;
            }

        .teacher-option {
            border: 1px solid #e1e5e9;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .teacher-option:hover {
                background-color: #f8f9ff;
                border-color: #667eea;
            }

            .teacher-option.selected {
                background-color: #f0f4ff;
                border-color: #667eea;
            }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .loading-spinner {
            background: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            color: #667eea;
        }

        .spinner-border {
            color: #667eea;
        }
    </style>
</head>
<body>
    <div class="registration-container">
        <div class="registration-card">
            <!-- Header -->
            <div class="registration-header">
                <i class="fas fa-user-plus fa-3x mb-3"></i>
                <h1>Join @Model.RootName</h1>
                <p>Start your learning journey with us</p>
            </div>

            <div class="registration-body">
                <!-- Instructions -->
                <div class="instructions">
                    <h5><i class="fas fa-info-circle me-2"></i>Registration Steps</h5>
                    <ul>
                        <li>Fill in your personal information</li>
                        <li>Select your preferred teacher for each subject</li>
                        <li>Choose subjects you want to study</li>
                        <li>Select online or offline learning mode</li>
                        <li>Complete your registration</li>
                    </ul>
                </div>

                <!-- Step Indicator -->
                <div class="step-indicator">
                    <div class="step active" id="step1">1</div>
                    <div class="step" id="step2">2</div>
                    <div class="step" id="step3">3</div>
                    <div class="step" id="step4">4</div>
                    <div class="step" id="step5">5</div>
                </div>

                <!-- Validation Errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Registration Form Multi-Step -->
                <form id="registrationForm" method="post" asp-action="PublicRegister" asp-route-root_code="@Model.RootCode">
                    <!-- Step 1: Personal Information -->
                    <div class="form-step active" id="step1Content">
                        <h3 class="mb-4">
                            <i class="fas fa-user text-primary me-2"></i>
                            Personal Information
                        </h3>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="studentName">Full Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="studentName" name="StudentName" required maxlength="100" />
                                <div class="invalid-feedback"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="birthDate">Birthdate <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="birthDate" name="BirthDate" required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="studentPhone">Student Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="studentPhone" name="StudentPhone" required maxlength="20" />
                                <div class="invalid-feedback"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="parentPhone">Father Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="parentPhone" name="StudentFatherPhone" required maxlength="20" />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="motherPhone">Mother Phone <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="motherPhone" name="StudentMotherPhone" required maxlength="20" />
                                <div class="invalid-feedback"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="fatherJob">Father Job <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="fatherJob" name="StudentFatherJob" required maxlength="50" />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="motherJob">Mother Job <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="motherJob" name="StudentMotherJob" required maxlength="50" />
                                <div class="invalid-feedback"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Gender <span class="text-danger">*</span></label>
                                <div class="d-flex gap-3 mt-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" value="true" id="genderMale" required />
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" value="false" id="genderFemale" required />
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Mode Selection & Branch -->
                    <div class="form-step" id="step2Content">
                        <h3 class="mb-4">
                            <i class="fas fa-laptop text-primary me-2"></i>
                            Learning Mode & Location
                        </h3>

                        <!-- Mode Selection -->
                        <div class="mb-4">
                            <label class="form-label">How do you want to study? <span class="text-danger">*</span></label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" name="Mode" value="Offline" id="modeOffline" checked required />
                                        <label class="form-check-label" for="modeOffline">
                                            <i class="fas fa-building me-2"></i>Offline (in center)
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" name="Mode" value="Online" id="modeOnline" required />
                                        <label class="form-check-label" for="modeOnline">
                                            <i class="fas fa-laptop me-2"></i>Online
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Offline: Branch & Year Selection -->
                        <div id="branchSection" class="mb-4">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="branchCode">Branch <span class="text-danger">*</span></label>
                                    <select class="form-select" id="branchCode" name="BranchCode">
                                        <option value="">Select Branch</option>
                                        @foreach (var branch in Model.AvailableBranches)
                                        {
                                            <option value="@branch.Value">@branch.Text</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback"></div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="yearCode">Academic Year <span class="text-danger">*</span></label>
                                    <select class="form-select" id="yearCode" name="YearCode">
                                        <option value="">Select Academic Year</option>
                                        @foreach (var year in Model.AvailableYears)
                                        {
                                            <option value="@year.Value">@year.Text</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="eduYearCodeDisplay">Education Year</label>
                                    <input type="text" class="form-control" id="eduYearCodeDisplay" value="@activeEduYear?.Text" disabled />
                                    <input type="hidden" id="eduYearCode" name="EduYearCode" value="@activeEduYear?.Value" />
                                </div>
                            </div>
                        </div>

                        <!-- Online: PIN Section -->
                        <div id="onlinePinSection" style="display:none;">
                            <h4 class="mb-3">
                                <i class="fas fa-key text-primary me-2"></i>
                                Online Registration PIN
                            </h4>
                            <div class="mb-3">
                                <label for="pinCode" class="form-label">Enter PIN Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="pinCode" maxlength="20" autocomplete="off" />
                                <div id="pinError" class="text-danger mt-2"></div>
                            </div>
                            <button type="button" class="btn btn-primary" id="validatePinBtn">Validate PIN</button>

                            <!-- Year Selection for Online (shown after PIN validation) -->
                            <div id="onlineYearSection" style="display:none;" class="mt-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-graduation-cap text-primary me-2"></i>
                                    Select Academic Year
                                </h5>
                                <div class="mb-3">
                                    <label class="form-label" for="onlineYearCode">Academic Year <span class="text-danger">*</span></label>
                                    <select class="form-select" id="onlineYearCode" name="OnlineYearCode">
                                        <option value="">Select Academic Year</option>
                                        @foreach (var year in Model.AvailableYears)
                                        {
                                            <option value="@year.Value">@year.Text</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback"></div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="onlineEduYearCodeDisplay">Education Year</label>
                                    <input type="text" class="form-control" id="onlineEduYearCodeDisplay" value="@activeEduYear?.Text" disabled />
                                    <input type="hidden" id="onlineEduYearCode" name="OnlineEduYearCode" value="@activeEduYear?.Value" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: Subject & Teacher Selection -->
                    <div class="form-step" id="step3Content">
                        <h3 class="mb-4">
                            <i class="fas fa-school text-primary me-2"></i>
                            Subject & Teacher Selection
                        </h3>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Please select your subjects and choose a teacher for each one.
                        </div>

                        <div id="availableSubjects">
                            <!-- Subjects and teachers will be loaded here -->
                        </div>

                        <div id="selectedSubjectsSummary" class="mt-4" style="display: none;">
                            <h5>Selected Subjects</h5>
                            <div id="selectedSubjectsList"></div>
                        </div>
                    </div>

                    <!-- Step 4: Schedule Selection -->
                    <div class="form-step" id="step4Content">
                        <h3 class="mb-4">
                            <i class="fas fa-calendar text-primary me-2"></i>
                            Schedule Selection
                        </h3>

                        <!-- Offline: Schedule Selection -->
                        <div id="scheduleSection">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Please select a schedule for each subject.
                            </div>
                            <div id="scheduleSelection">
                                <!-- Schedules will be loaded here -->
                            </div>
                        </div>

                        <!-- Online: Username/Password Section -->
                        <div id="onlineUserSection" style="display:none;">
                            <h4 class="mb-3">
                                <i class="fas fa-user-lock text-primary me-2"></i>
                                Create Online Account
                            </h4>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="username" maxlength="40" autocomplete="off" />
                                <div id="userError" class="text-danger mt-2"></div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="password" maxlength="40" />
                            </div>
                        </div>
                    </div>

                    <!-- Step 5: Confirmation -->
                    <div class="form-step" id="step5Content">
                        <div id="offlineSummarySection">
                            <h3 class="mb-4">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Confirmation
                            </h3>
                            <div class="alert alert-success">
                                <i class="fas fa-info-circle me-2"></i>
                                Review your information before submitting.
                            </div>
                            <div id="registrationSummary"></div>
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox" id="termsAccepted" required>
                                <label class="form-check-label" for="termsAccepted">
                                    I agree to the terms and conditions
                                </label>
                            </div>
                        </div>

                        <div id="onlineRegistrationSection" style="display:none;">
                            <h3 class="mb-4">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Complete Online Registration
                            </h3>
                            <div class="alert alert-success">
                                <i class="fas fa-info-circle me-2"></i>
                                Ready to complete your online registration.
                            </div>
                            <button type="button" class="btn btn-success" id="completeOnlineBtn">Complete Online Registration</button>
                        </div>
                    </div>

                    <!-- Navigation Buttons -->
                    <div class="navigation-buttons">
                        <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">
                            <i class="fas fa-arrow-left me-2"></i>Previous
                        </button>
                        <div></div>
                        <button type="button" class="btn btn-primary" id="nextBtn">
                            Next <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                        <button type="button" class="btn btn-success" id="submitBtn" style="display: none;">
                            <i class="fas fa-check me-2"></i>Complete Registration
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>
                            Your data is secure and protected.
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay" style="display: none;">
        <div class="loading-spinner">
            <div class="spinner-border" role="status"></div>
            <p class="mt-3 mb-0">Processing your registration...</p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/StudentRegistration.js"></script>
</body>
</html>