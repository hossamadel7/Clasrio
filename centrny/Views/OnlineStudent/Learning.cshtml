@{
    ViewData["Title"] = "Learning Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-graduation-cap me-2"></i>Learning Center
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0" id="breadcrumb">
                        <li class="breadcrumb-item active">Learning Center</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer" class="mb-3"></div>

    <!-- Subject Selection -->
    <div class="row mb-4" id="subjectSelection">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-book me-2"></i>Select Subject
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="subjectSelect" class="form-label">Choose a subject to view chapters:</label>
                        <select class="form-select" id="subjectSelect">
                            <option value="">Loading subjects...</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-primary" id="loadChaptersBtn" disabled>
                        <i class="fas fa-arrow-right me-2"></i>View Chapters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Chapters Grid -->
    <div class="row mb-4" id="chaptersSection" style="display: none;">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-layer-group me-2"></i>Chapters
                    </h6>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="backToSubjectsBtn">
                        <i class="fas fa-arrow-left me-2"></i>Back to Subjects
                    </button>
                </div>
                <div class="card-body">
                    <div class="loading-spinner text-center py-4" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading chapters...</p>
                    </div>
                    <div class="row" id="chaptersGrid">
                        <!-- Chapters will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lessons Section -->
    <div class="row mb-4" id="lessonsSection" style="display: none;">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-play-circle me-2"></i>Lessons
                    </h6>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="backToChaptersBtn">
                        <i class="fas fa-arrow-left me-2"></i>Back to Chapters
                    </button>
                </div>
                <div class="card-body">
                    <div class="loading-spinner text-center py-4" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading lessons...</p>
                    </div>
                    <div id="lessonsContainer">
                        <!-- Lessons will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
.chapter-card {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    border: 1px solid #e3e6f0;
    border-radius: 0.35rem;
    margin-bottom: 1.5rem;
}

.chapter-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    border-color: #5a5c69;
}

.chapter-card .card-body {
    padding: 1.5rem;
}

.chapter-header {
    display: flex;
    justify-content-between;
    align-items-start;
    margin-bottom: 1rem;
}

.chapter-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #5a5c69;
    margin: 0;
}

.lessons-count-badge {
    background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 10rem;
    font-size: 0.75rem;
    font-weight: 600;
}

.chapter-description {
    color: #858796;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1rem;
}

.lesson-item {
    border: 1px solid #e3e6f0;
    border-radius: 0.35rem;
    padding: 1rem;
    margin-bottom: 0.75rem;
    background: #f8f9fc;
    transition: background-color 0.2s;
}

.lesson-item:hover {
    background: #eaecf4;
}

.lesson-header {
    display: flex;
    justify-content-between;
    align-items-center;
    margin-bottom: 0.5rem;
}

.lesson-title {
    font-weight: 600;
    color: #5a5c69;
    margin: 0;
}

.lesson-actions {
    display: flex;
    gap: 0.5rem;
}

.lesson-description {
    color: #858796;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
}
</style>

<script src="~/js/OnlineStudent.js"></script>