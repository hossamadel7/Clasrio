                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label for="centerName" class="form-label">Center Name</label>
                        <input type="text" class="form-control" id="centerName" required>
                    </div>
                    <div class="mb-2">
                        <label for="centerPhone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="centerPhone" required>
                    </div>
                    <div class="mb-2">
                        <label for="centerAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="centerAddress">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info btn-action">Add Center</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Branch Modal -->
